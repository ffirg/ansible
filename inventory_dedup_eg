            backend: server1-be.lan
            management: server1-mgmt.lan
          ansible_host: "{{ interfaces[target_network | default('management')] }}"
        foobar2.host:
          interfaces:
            frontend: server2-fe.lan
            backend: server2-be.lan
            management: server2-mgmt.lan
          ansible_host: "{{ interfaces[target_network | default('management')] }}"
